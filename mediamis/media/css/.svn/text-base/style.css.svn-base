div, p, table {
    border: 1px solid #D9D9D9;
}

p {
    margin: 10px;
}

body {
    background: url("../img/sky.jpg") repeat-x scroll center top #D1EDFF;
    height: 100%;
    overflow: auto;
    position: absolute;
    width: 100%;
}

div#debug-info {
    background: none repeat scroll 0 0 #000000;
    list-style: none outside none;
    margin: 0;
    padding: 0;
    text-align: center;
    width: 100%;
}

div#container {
    margin: 0 auto;
    padding: 0;
    width: 950px;
    overflow: hidden;
}

.box {
    background-color: #EEEEEE;
    /*
    Round corners
    See http://hacks.mozilla.org/wp-content/uploads/2010/04/exemple-blog.html#
    */
    border-radius: 15px;
    -moz-border-radius: 15px;
    -webkit-border-radius: 15px;
    /*
    Shadow
     See http://www.css3.info/preview/box-shadow/
    */
    box-shadow: 10px 10px 5px #888;
    -moz-box-shadow: 10px 10px 5px #888;
    -webkit-box-shadow: 10px 10px 5px #888;
}

.light-box {
    background-color: #EEEEEE;
    /* Round corners */
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    /* Shadow */
    box-shadow: 5px 5px 5px #888888;
    -moz-box-shadow: 5px 5px 5px #888888;
    -webkit-box-shadow: 5px 5px 5px #888888;
}

div#main-title {
    clear: both;
    margin: 25px 0 0;
    padding: 0;
    float: left;
    height: 347px;
    overflow: hidden;
    position: relative;
    width: 600px;
}

div#login {
    margin: 25px 0 0;
    float: right;
    width: 290px;
}

div#login div {
    margin: 10px;
}

div#introduction {
    float: right;
    margin-top: 10px;
    width: 290px;
}

div#search {
    float: right;
    height: 185px;
    margin: 10px 0;
    width: 290px;
}

div#search form {
    margin: 10px;
}

div#content {
    float: left;
    /*height: 330px;*/
    margin: 10px 10px 10px 0;
    padding: 0 0 18px;
    width: 600px;
    overflow: hidden;
}

div#search-result {
    width: 100%;
    overflow: hidden;
    padding: 10px;
}

div#search-result div#media-list {
    width: 95%;
    /* Firefox
     See http://www.html5rocks.com/en/tutorials/flexbox/quick/#toc-support
    */
    display: -webkit-box;
    -moz-box-direction: normal;
    -moz-box-flex: 1;
    -moz-box-orient: vertical;
    /* Chrome */
    display: -webkit-box;
    -webkit-box-direction: normal;
    -webkit-box-flex: 1;
    -webkit-box-orient: vertical;
    /* IE ?
     See http://blogs.msdn.com/b/ie/archive/2011/04/14/ie10-platform-preview-and-css-features-for-adaptive-layouts.aspx
     */
    display: -webkit-box;
    -webkit-box-direction: normal;
    -webkit-box-flex: 1;
    -webkit-box-orient: vertical;
    /* Generic */
    display: box;
    box-direction: normal;
    box-flex: 1;
    box-orient: vertical;
}

div#search-result div#media-list div#media {
    -moz-box-ordinal-group: 2;
    -webkit-box-ordinal-group: 2;
    display: block;
    margin: 0.5em 0;
    padding: 10px;
    overflow: hidden;
}

div#search-result #media-list #media #description {
    float: left;
}

div#search-result #media-list #media #actions {
    float: right;
}